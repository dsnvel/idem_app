<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDEM.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="ScanerPage"
                Text="Scan"
                SemanticProperties.Hint="Move to page with scaner"
                Clicked="ScanerPageClicked"
                HorizontalOptions="Center"
                BackgroundColor="Black"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
